<div 
  class="modal"
  data-controller="modal-component" 
  data-modal-component-backdrop-value="<%= @backdrop %>"
  data-modal-component-initial-state-value="show">
  <div data-modal-component-target="wrapper" class="fixed inset-0 z-50 flex items-start justify-center w-full">
    <button data-modal-component-target="backdrop" data-action="modal-component#backdropClicked" class="fixed top-0 left-0 w-screen h-full bg-black dark:bg-white opacity-30"></button>
    <div data-modal-component-target="modal" 
      data-transition-enter-from="opacity-0 transition-y-0"
      data-transition-enter-to="opacity-100 transition-y-6"
      data-transition-leave-from="opacity-100"
      data-transition-leave-to="opacity-0 transition-y-0"
      class="<%= @classes %> relative w-full sm:w-auto sm:min-w-lg max-w-2xl min-h-screen-1/3 sm:min-h-4 sm:h-auto max-h-screen-3/4 mx-auto mt-auto sm:my-auto bg-white dark:bg-zinc-900 rounded-t-xl sm:rounded-xl shadow overflow-y-auto sm:scrollbar-hide">
      <div data-modal-component-target="title" class="sticky w-full top-0 flex items-center px-4 h-12 sm:h-14 text-base font-bold space-x-4 bg-white dark:bg-zinc-900 z-10 rounded-t-xl">
        <button data-action="modal-component#hide">
          <%= render "shared/icons/close" %>
        </button>
        <span><%= @title %></span>
      </div>

      <div data-modal-component-target="content" class="px-4 pt-4 pb-8 sm:px-6">
        <%= content %>
        <div style="height:env(safe-area-inset-bottom)"></div>
      </div>
    </div>
  </div>
</div>
