<div class="<%= dom_id tag %>_subscribe_button" >
  <% if current_user.blank? %>
    <%= link_to t('subscribe'), 
      login_path(type: :login), 
      data: { 
        turbo_frame: :modal 
      }, class: "block w-full cursor-pointer bg-primary hover:scale-105 rounded text-white text-center py-1 px-4" %>
  <% elsif current_user.subscribe_tag? tag %>
    <div class="w-full bg-transparent text-center py-1">
      <%= link_to t('unsubscribe'), 
        new_subscribe_tag_path(id: tag.id), 
        data: { 
          turbo_frame: :modal,
        }, 
        class: "bg-transparent cursor-pointer opacity-70" %>
    </div>
  <% else %>
    <%= button_to t('subscribe'), subscribe_tags_path(id: tag.id), class: "block w-full cursor-pointer bg-primary hover:scale-105 rounded text-white text-center py-1 px-4" %>
  <% end %>
</div>
