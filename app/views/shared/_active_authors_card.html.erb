<div class="bg-white dark:bg-zinc-900 dark:border-zinc-800 p-4 sm:p-6 sm:border sm:rounded-lg">
  <div class="flex mb-4">
    <span class="font-bold"><%= t('active_authors') %></span>
  </div>
  <% User.active.where.not(id: current_user&.block_user_ids).limit(20).sample(5).each do |user| %>
    <div class="flex items-center justify-between mb-2">
      <%= link_to user_path(user), class: "flex items-center space-x-2" do %>
        <%= image_tag user.avatar, class: "w-10 h-10 rounded-full" %>
        <div><%= user.name %></div>
      <% end %>
      <div class="text-sm">
        <% if current_user.present? %>
          <%= link_to t('subscribe'), view_modals_path(type: :login), data: { turbo_method: :post }, class: "block w-full cursor-pointer bg-blue-500 hover:bg-blue-600 rounded text-white text-center py-1 px-4" %>
        <% else %>
          <%= render "users/action_buttons", user: user %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
