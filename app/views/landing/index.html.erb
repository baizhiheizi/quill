<div class='min-h-screen pt-16 mx-auto bg-white max-w-screen-md'>
  <div class='flex justify-center mb-4'>
    <%= image_tag 'logo.svg', class:'w-auto h-24' %>
  </div>
  <div class='flex justify-center mb-8'>
    <span class='font-sans text-2xl text-gray-800'><%= t('comming_soon') %></span>
  </div>
  <div class='flex justify-center mb-4 font-sans'>
    <% unless current_user.present? %>
      <div class='flex flex-col w-10/12 space-y-2 md:w-1/3'>
        <a class='block py-2 text-lg text-center text-white bg-yellow-500 cursor-pointer rounded-md' href='/login'>
          <%= t('login_to_earn_btc') %>
        </a>
        <div class='text-sm text-gray-500' href='/login'>
          <%= t('login_right_now_to_earn_btc_airdrop') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
