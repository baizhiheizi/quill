<div class="max-w-4xl mx-auto">
  <div class="p-4 bg-white rounded-lg mb-4">
    <div class="sm:grid sm:grid-cols-2 gap-4">
      <div class="text-center p-2">
        <div class="opacity-70 mb-2">
          <%= t('users_count') %>
        </div>
        <div class="text-2xl font-bold">
          <%= User.count %>
        </div>
      </div>
      <div class="text-center p-2">
        <div class="opacity-70 mb-2">
          <%= t('articles_count') %>
        </div>
        <div class="text-2xl font-bold">
          <%= Article.count %>
        </div>
      </div>
      <div class="text-center p-2">
        <div class="opacity-70 mb-2">
          <%= t('author_revenue_total') %>
        </div>
        <div class="text-2xl font-bold">
          $<%= Transfer.author_revenue_total_in_usd.to_f.round(4) %>
        </div>
      </div>
      <div class="text-center p-2">
        <div class="opacity-70 mb-2">
          <%= t('reader_revenue_total') %>
        </div>
        <div class="text-2xl font-bold">
          $<%= Transfer.reader_revenue_total_in_usd.to_f.round(4) %>
        </div>
      </div>
    </div>
  </div>
  <div class="p-4 bg-white rounded-lg">
    <%= turbo_frame_tag "transfers", src: transfers_path, target: "_top" do %>
      <%= render "shared/loading" %>
    <% end %>
  </div>
</div>
