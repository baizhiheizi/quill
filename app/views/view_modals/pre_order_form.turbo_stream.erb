<% content_for :modal_title do %>
  <%= t(params[:order_type]) %>
<% end %>
<% content_for :modal_content do %>
  <%= render "pre_orders/pre_order_form", article: @article, order_type: params[:order_type] %>
<% end %>

<%= turbo_stream.append "modal-slot" do %>
  <%= render "view_modals/modal", backdrop: 'static', html_id: "pre_order_modal" %>
<% end %>
