<% content_for :modal_title do %>
  <%= t('buy_article') %>
<% end %>
<% content_for :modal_content do %>
  <%= render partial: "articles/buy_payment_modal", locals: { article: @article } %>
<% end %>

<%= turbo_stream.append "modal-slot" do %>
  <%= render "view_modals/modal", backdrop: 'static', html_id: "article_#{@article.uuid}_payment_modal" %>
<% end %>
