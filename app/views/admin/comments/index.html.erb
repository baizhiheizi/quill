<div class="flex items-center space-x-4 mb-4">
  <%= link_to 'Home', admin_root_path %>
  <span>/</span>
  <span>Comments</span>
</div>

<div class="p-4 bg-white rounded-lg shadow">
  <%= turbo_frame_tag 'admin_comments' do %>
    <div class="mb-4">
      <%= render 'admin/comments/query' %>
    </div>
    <div data-controller="infinite-scroll" class="w-full overflow-x-scroll scrollbar-hide">
      <table class='w-full table-auto min-w-max '>
        <thead>
          <tr class="bg-zinc-100">
            <th class="p-4">ID</th>
            <th class="p-4">Author</th>
            <th class="p-4">Article</th>
            <th class="p-4">State</th>
            <th class="p-4">Content</th>
            <th class="p-4">upvote/downvote</th>
            <th class="p-4">Created</th>
            <th class="p-4"></th>
          </tr>
        </thead>
        <tbody id="admin_comments_list">
          <%= render partial: 'admin/comments/comment', collection: @comments, as: :comment %>
        </tbody>
      </table>
      <div data-infinite-scroll-target='scrollArea'></div>
      <%= render partial: "shared/pagination", locals: { pagy: @pagy } %>
    </div>
  <% end %>
</div>
