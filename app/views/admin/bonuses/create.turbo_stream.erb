<%= turbo_stream.append "flashes" do %>
  <% if @bonus.errors.present? %>
    <%= render partial: "flashes/flash", locals: { type: :danger, message: @bonus.errors.full_messages.join(';') } %>
  <% else %>
    <%= render partial: "flashes/flash", locals: { type: :success, message: 'Created' } %>
  <% end %>
<% end %>

<% if @bonus.errors.blank? %>
  <%= turbo_stream.update "modal" do %>
  <% end %>

  <%= turbo_stream.prepend "admin_bonuses_list" do %>
    <%= render 'admin/bonuses/bonus', bonus: @bonus %>
  <% end %>
<% end %>
