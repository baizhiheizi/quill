<%= form_with url: admin_orders_path, method: :get, class: "flex items-center flex-wrap" do |form| %>
  <%= form.select :state, 
    [
      ['All', 'all'], 
      ['Paid', 'paid'],
      ['Completed', 'completed'],
      ['Stale', 'stale']
    ], 
    { selected: @state }, 
    class: "rounded-lg m-1" %>
  <%= form.select :order_by, 
    [
      ['Created DESC', 'created_at_desc'], 
      ['Created ASC', 'created_at_asc'], 
    ], 
    { selected: @order_by }, 
    class: "rounded-lg m-1" %>
  <%= form.text_field :query, value: @query, placeholder: "Search", class: "rounded-lg m-1" %>
  <%= form.hidden_field :buyer_id, value: params[:buyer_id] %>
  <%= form.submit :Query, class: "cursor-pointer rounded bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 m-1" %>
<% end %>
