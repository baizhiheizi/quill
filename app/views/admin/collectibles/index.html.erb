<div class="flex items-center space-x-4 mb-4">
  <%= link_to 'Home', admin_root_path %>
  <span>/</span>
  <span>Collectibles</span>
</div>

<div class="p-4 bg-white dark:bg-zinc-900 rounded-lg shadow">
  <%= turbo_frame_tag 'admin_collectibles' do %>
    <div class="mb-4">
      <%= render 'admin/collectibles/query' %>
    </div>
    <div data-controller="infinite-scroll" class="w-full overflow-x-scroll scrollbar-hide">
      <table class='w-full table-auto min-w-max '>
        <thead>
          <tr class="bg-zinc-100 dark:bg-zinc-800">
            <th class="p-4">ID</th>
            <th class="p-4">State</th>
            <th class="p-4">Source</th>
            <th class="p-4">Name</th>
            <th class="p-4">Collection</th>
            <th class="p-4">Identifier</th>
            <th class="p-4">Token ID</th>
            <th class="p-4">Updated At</th>
          </tr>
        </thead>
        <tbody id="admin_collectibles_list">
          <%= render partial: 'admin/collectibles/collectible', collection: @collectibles, as: :collectible %>
        </tbody>
      </table>
      <div data-infinite-scroll-target='scrollArea'></div>
      <%= render "shared/pagination", pagy: @pagy, id: "admin_collectibles_pagination" %>
    </div>
  <% end %>
</div>
