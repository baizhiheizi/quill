<%= form_with url: admin_statistics_path, method: :get, class: "flex items-center flex-wrap" do |form| %>
  <%= form.select :state, 
    [
      ['All', 'all'], 
      ['Daily', 'DailyStatistic'],
    ], 
    { selected: @state }, 
    class: "rounded-lg m-1 dark:bg-zinc-900" %>
  <%= form.select :order_by, 
    [
      ['DESC', 'datetime_desc'], 
      ['ASC', 'datetime_asc'], 
    ], 
    { selected: @order_by }, 
    class: "rounded-lg m-1 dark:bg-zinc-900" %>
  <%= form.text_field :query, value: @query, placeholder: "Search", class: "rounded-lg m-1 dark:bg-zinc-900" %>
  <%= form.submit :Query, class: "cursor-pointer rounded bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 m-1" %>
<% end %>
