<div class="flex items-center space-x-4 mb-4">
  <%= link_to 'Home', admin_root_path %>
  <span>/</span>
  <span>Stats</span>
</div>

<div class="p-4 bg-white dark:bg-zinc-900 rounded-lg shadow">
  <%= turbo_frame_tag 'admin_statistics' do %>
    <div class="mb-4">
      <%= render 'admin/statistics/query' %>
    </div>
    <div data-controller="infinite-scroll" class="w-full overflow-x-scroll scrollbar-hide">
      <table class='w-full table-auto min-w-max '>
        <thead>
          <tr class="bg-zinc-100 dark:bg-zinc-800">
            <th class="p-4">ID</th>
            <th class="p-4">Type</th>
            <th class="p-4">DateTime</th>
            <th class="p-4">New Users</th>
            <th class="p-4">New Paid Users</th>
            <th class="p-4">All Paid Users</th>
            <th class="p-4">New Payments</th>
            <th class="p-4">New Articles</th>
            <th class="p-4"></th>
          </tr>
        </thead>
        <tbody id="admin_statistics_list">
          <%= render partial: 'admin/statistics/statistic', collection: @statistics, as: :statistic %>
        </tbody>
      </table>
      <div data-infinite-scroll-target='scrollArea'></div>
      <%= render partial: "shared/pagination", locals: { pagy: @pagy } %>
    </div>
  <% end %>
</div>
