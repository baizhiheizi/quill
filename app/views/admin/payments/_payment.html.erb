<tr class="hover:bg-zinc-50 dark:hover:bg-zinc-800 border-b">
  <td class="p-4">
    <%= payment.id %>
  </td>
  <td class="p-4">
    <%= payment.trace_id %>
  </td>
  <td class="p-4">
    <% if payment.payer.present? %>
      <%= render 'admin/users/field', user: payment.payer %>
    <% else %>
      <%= payment.payer_id || '-' %>
    <% end %>
  </td>
  <td class="p-4">
    <div class="flex items-center space-x-2">
      <%= image_tag payment.currency.icon_url, class: "w-10 h-10 rounded" %>
      <span><%= payment.price_tag %></span>
    </div>
  </td>
  <td class="p-4">
    <div class="flex justify-center">
      <span class="px-2 py-1 rounded text-white
        <%=
          {
            paid: 'bg-blue-500',
            completed: 'bg-green-500',
            refunded: 'bg-indigo-500'
          }[payment.state.to_sym]
          %>">
        <%= payment.state %>
      </span>
    </div>
  </td>
  <td class="p-4">
    <%= payment.decrypted_memo['t'] || '-' %>
  </td>
  <td class="p-4">
    <%= link_to payment.decrypted_memo['a'], admin_article_path(payment.decrypted_memo['a']), data: { turbo_frame: '_top' } if payment.decrypted_memo['a'].present? %>
  </td>
  <td class="p-4">
    <%= payment.created_at %>
  </td>
  <td class="p-4">
    <%= link_to 'Detail', admin_payment_path(payment), class: "bg-blue-500 hover:bg-blue-600 rounded text-white px-4 py-2", data: { turbo_frame: "_top" } %>
  </td>
</tr>
