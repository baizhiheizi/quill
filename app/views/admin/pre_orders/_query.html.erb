<%= form_with url: admin_pre_orders_path, method: :get, class: "flex items-center flex-wrap" do |form| %>
  <%= form.select :state, 
    [
      ['All', 'all'], 
      ['Paid', 'paid'],
      ['drafted', 'drafted'],
    ], 
    { selected: @state }, 
    class: "rounded-lg m-1 dark:bg-zinc-900" %>
  <%= form.select :order_type, 
    [
      ['All', 'all'], 
      ['buy_article', 'buy_article'],
      ['reward_article', 'reward_article'],
      ['buy_collection', 'buy_collection'],
      ['mint_collection', 'mint_collection'],
    ], 
    { selected: @order_type }, 
    class: "rounded-lg m-1 dark:bg-zinc-900" %>
  <%= form.select :order_by, 
    [
      ['Created DESC', 'created_at_desc'], 
      ['Created ASC', 'created_at_asc'], 
    ], 
    { selected: @order_by }, 
    class: "rounded-lg m-1 dark:bg-zinc-900" %>
  <%= form.text_field :query, value: @query, placeholder: "Search", class: "rounded-lg m-1 dark:bg-zinc-900" %>
  <%= form.hidden_field :payer_id, value: params[:payer_id] %>
  <%= form.hidden_field :item_type, value: params[:item_type] %>
  <%= form.hidden_field :item_id, value: params[:item_id] %>
  <%= form.submit :Query, class: "cursor-pointer rounded bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 m-1" %>
<% end %>
