<div class="flex items-center space-x-4 mb-4">
  <%= link_to 'Home', admin_root_path %>
  <span>/</span>
  <%= link_to 'PreOrders', admin_pre_orders_path %>
  <span>/</span>
  <span><%= @pre_order.id %></span>
</div>

<div class="bg-white dark:bg-zinc-900 roundedlg p-4">
  <div class="flex items-center space-x-2 mb-4">
    <%= image_tag @pre_order.currency.icon_url, class: "w-10 h-10 rounded" %>
    <div>
      <div><%= @pre_order.amount_tag %></div>
      <div class="text-sm opacity-70"><%= @pre_order.trace_id %></div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-8">
    <div class="col-span-1 flex space-x-2">
      <span class="font-bold">ID:</span> 
      <span><%= @pre_order.id %></span>
    </div>
    <div class="col-span-1 flex space-x-2">
      <span class="font-bold">TraceID:</span> 
      <span><%= @pre_order.trace_id %></span>
    </div>
    <div class="col-span-1 flex space-x-2">
      <span class="font-bold">FollowID:</span> 
      <span><%= @pre_order.follow_id %></span>
    </div>
    <div class="col-span-1 flex space-x-2">
      <span class="font-bold">Payer:</span> 
      <span>
        <% if @pre_order.payer.present? %>
          <%= render 'admin/users/field', user: @pre_order.payer, tab: :pre_orders %>
        <% else %>
          <%= @pre_order.payer_id %>
        <% end %>
      </span>
    </div>
    <div class="col-span-1 flex space-x-2">
      <span class="font-bold">Total:</span> 
      <span><%= @pre_order.amount_tag %></span>
    </div>
    <div class="col-span-1 flex space-x-2">
      <span class="font-bold">State:</span> 
      <div class="">
        <span class="px-2 py-1 rounded text-white
          <%=
            {
              drafted: 'bg-slate-500',
              paid: 'bg-green-500',
            }[@pre_order.state.to_sym]
            %>">
          <%= @pre_order.state %>
        </span>
      </div>
    </div>
    <div class="col-span-1 flex space-x-2">
      <span class="font-bold">Memo:</span> 
      <span><%= @pre_order.memo %></span>
    </div>
    <div class="col-span-1 flex space-x-2">
      <span class="font-bold">Decoded Memo:</span> 
      <span><%= @pre_order.decoded_memo %></span>
    </div>
    <div class="col-span-1 flex space-x-2">
      <span class="font-bold">Created:</span> 
      <span><%= @pre_order.created_at %></span>
    </div>
  </div>
</div>
