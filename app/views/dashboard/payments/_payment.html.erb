<div class="py-2 px-4">
  <div class="grid grid-cols-3 md:grid-cols-6 gap-2">
    <div class="flex items-center opacity-70 col-span-2 md:col-span-1">
      <% if payment.article.present? %>
        <%= link_to payment.article.title, user_article_path(payment.article.author, payment.article.uuid), class: "truncate", data: { turbo_frame: "_top" } %>
      <% else %>
        <span>-</span>
      <% end %>
    </div>
    <div class="flex items-center space-x-2 col-span-1 justify-center">
      <%= t("activerecord.attributes.payment.state.#{payment.state}") %>
    </div>
    <div class="flex items-center space-x-2 col-span-2">
      <img src="<%= payment.currency.icon_url %>" class="w-8 h-8 rounded-full" />
      <span><%= payment.price_tag %></span>
    </div>
    <div class="hidden md:flex items-center col-span-1">
      <a href="<%= payment.snapshot_url %>" target="_blank"><%= t('activerecord.attributes.payment.snapshot') %></a>
    </div>
    <div class="flex items-center justify-center col-span-1 text-sm">
      <%= payment.created_at.strftime("%Y-%m-%d %H:%M") %>
    </div>
  </div>
</div>
