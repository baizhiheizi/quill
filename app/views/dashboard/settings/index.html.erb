<div class="pt-4"
  data-controller="tabs"
  data-tabs-active-tab-value="<%= @tab %>"
  data-tabs-active-class-value="border-b-2">
  <div class="w-full flex overflow-auto flex-nowrap scrollbar-hide items-center flex border-b px-4 mb-4">
    <%= link_to t('profile'), 
      dashboard_settings_path(tab: :profile),
      class: "cursor-pointer py-1 px-4 border-blue-500 textrgray-600",
      data: {
        tabs_target: "tab",
        tabs_tabname_param: "profile",
        action: "tabs#active"
      } %>
    <%= link_to t('notification'), 
      dashboard_settings_path(tab: :notification),
      class: "cursor-pointer py-1 px-4 border-blue-500 textrgray-600",
      data: {
        tabs_target: "tab",
        tabs_tabname_param: "notification",
        action: "tabs#active"
      } %>
    <%= link_to t('access_token'), 
      dashboard_settings_path(tab: :access_token),
      class: "cursor-pointer py-1 px-4 border-blue-500 textrgray-600",
      data: {
        tabs_target: "tab",
        tabs_tabname_param: "access_token",
        action: "tabs#active"
      } %>
  </div>

  <div class="hidden pb-4"
    data-tabs-content-param="profile"
    data-tabs-target="content">
    <%= render "dashboard/settings/profile" %>
  </div>

  <div class="hidden pb-4"
    data-tabs-content-param="notification"
    data-tabs-target="content">
    <%= render "dashboard/settings/notification" %>
  </div>

  <div class="hidden pb-4"
    data-tabs-content-param="swap_orders"
    data-tabs-target="content">
    <%= turbo_frame_tag "#{dom_id current_user}_swap_orders", src: dashboard_swap_orders_path, loading: :lazy do %>
      <%= render "shared/loading" %>
    <% end %>
  </div>
</div>
