<div class="sm:grid sm:grid-cols-4 gap-3 py-2 border-b dark:border-zinc-800">
  <div class="text-sm opacity-70 truncate">
    <%= link_to comment.commentable.title, article_path(comment.commentable.uuid), class: "truncate", data: { turbo_frame: "_top" } %>
  </div>
  <div class="text-sm opacity-70">
    <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
  </div>
  <div class="col-span-2 prose prose-sm dark:prose-invert dark:bg-zinc-900 rounded p-2 bg-zinc-50">
    <%= comment.content_as_html.html_safe %>
  </div>
</div>
