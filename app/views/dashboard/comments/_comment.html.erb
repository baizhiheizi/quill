<div class="py-4 border-b dark:border-opacity-5 dark:border-white">
  <div class="flex items-center justify-between space-x-4">
    <%= link_to comment.commentable.title, 
      user_article_path(comment.commentable.author, comment.commentable.uuid, anchor: "comment_#{comment.id}"), 
      class: "text-xl font-bold truncate flex-1", 
      data: { 
        turbo_frame: "_top" 
      } %>
    <%= render TimeFormatComponent.new datetime: comment.created_at.rfc3339 do %>
      <span class="opacity-80 min-w-fit">
        <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
      </span>
    <% end %>
  </div>
  <div class="prose-comment">
    <%= comment.content_as_html.html_safe %>
  </div>
</div>
