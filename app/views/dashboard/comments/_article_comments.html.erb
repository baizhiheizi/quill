<%= turbo_frame_tag "#{dom_id article}_comments" do %>
  <div data-controller="infinite-scroll">
    <div id="<%= dom_id article %>_comments_list">
      <% if comments.blank? %>
        <div class="text-center py-2 opacity-50">
          <%= t("no_comments") %>
        </div>
      <% else %>
        <%= render partial: "dashboard/comments/article_comment", collection: comments, as: :comment, locals: { article: article } %>
      <% end %>
    </div>
    <div data-infinite-scroll-target='scrollArea'></div>

    <%= render partial: "shared/pagination", locals: { pagy: pagy, id: "#{dom_id article}_comments_pagination" } %>
  </div>
<% end %>
