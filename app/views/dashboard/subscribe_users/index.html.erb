<%= turbo_frame_tag "#{dom_id current_user}_subscribing_users" do %>
  <div data-controller="infinite-scroll">
    <% if @users.blank? %>
      <%= render EmptyComponent.new text: t('no_record') %>
    <% else %>
      <div id="<%= dom_id current_user %>_subscribing_list">
          <%= render partial: "dashboard/subscribe_users/user", collection: @users, as: :user %>
      </div>
      <div data-infinite-scroll-target='scrollArea'></div>
      <%= render "shared/pagination", pagy: @pagy, id: 'subscribing_users_pagination' %>
    <% end %>
  </div>
<% end %>
