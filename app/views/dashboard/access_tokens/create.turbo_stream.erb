<%= turbo_stream.prepend "#{dom_id current_user}_access_tokens_list" do %>
  <div id="<%= dom_id @access_token %>" class="border-b py-2 px-4">
    <div class="flex items-center space-x-4">
      <div class=""><%= @access_token.memo %></div>
      <div class="flex-1 flex justify-center">
        <div class="p-1 text-sm bg-gray-100"><%= @access_token.value %></div>
      </div>
      <div class="">
        <%= button_to t('delete'), 
          dashboard_access_token_path(@access_token), 
          method: :delete,
          form: {
            data: { 
              controller: "confirm",
              confirm_target: "form",
              confirm_identifier_value: SecureRandom.uuid,
              confirm_content_value: t("confirm_to_delete_token") 
            }
          },
          data: { 
            action: "confirm#invoke",
          }, 
          class: "bg-transparent cursor-pointer px-2 py-1 text-red-500" %>
      </div>
    </div>
  </div>
<% end %>

<%= turbo_stream.update "modal-slot" do %>
<% end %>
