<% if @article.published? %>
  <%= turbo_stream.remove "#{dom_id @article}_hidden" %>
<% else %>
  <%= turbo_stream.update "modal-slot" do %>
  <% end %>
  <%= turbo_stream.prepend "notifications" do %>
    <%= render "notifications/notification", message: t('write_something_first'), type: :warning %>
  <% end %>
<% end %>
