<div id="subscribe_tag_<%= dom_id tag %>" class="relative flex items-center px-4 py-2 border-b justify-between">
  <%= link_to tag_path(tag), class: "flex items-center space-x-2", data: { turbo_frame: "_top" } do %>
    <span class=""><%= tag.name %></span>
    <span class="">
      <%= tag.articles_count %>
      <%= t('articles') %>
    </span>
  <% end %>
  <div class="">
    <%= render "subscribe_tags/subscribe_button", tag: tag %>
  </div>
</div>
