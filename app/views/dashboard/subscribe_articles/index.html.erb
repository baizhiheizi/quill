<%= turbo_frame_tag "#{dom_id current_user}_subscribe_articles" do %>
  <div data-controller="infinite-scroll">
    <div id="<%= dom_id current_user %>_subscribe_articles_list">
      <% if @articles.blank? %>
        <div class="text-center py-2 opacity-50">
          <%= t("no_record") %>
        </div>
      <% else %>
        <%= render partial: "dashboard/subscribe_articles/article", collection: @articles, as: :article %>
      <% end %>
    </div>
    <div data-infinite-scroll-target='scrollArea'></div>

    <%= render partial: "shared/pagination", locals: { pagy: @pagy } %>
  </div>
<% end %>
