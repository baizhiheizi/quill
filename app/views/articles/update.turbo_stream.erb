<%= turbo_stream.replace "#{dom_id @article}_edit_form" do %>
  <%= render "articles/edit_form", article: @article, active_tab: 'options' %>
<% end %>

<%= turbo_stream.update "flashes" do %>
  <% if @article.errors.present? %>
    <%= render partial: "flashes/flash", locals: { type: :danger, message: @article.errors.full_messages.join(';') } %>
  <% else %>
    <%= render partial: "flashes/flash", locals: { type: :success, message: t('success_updated') } %>
  <% end %>
<% end %>
