<% user ||= current_user %>

<div class="mb-8">
  <%= article.content_as_html.html_safe %>
</div>

<div class="mb-8">
  <%= render partial: "articles/votes", locals: { article: article, user: user } %>
</div>

<% unless article.author == user %>
  <div class="flex justify-center">
    <%= link_to new_pre_order_path(order_type: :reward_article, article_uuid: article.uuid), 
      data: {
        turbo_frame: :modal
      },
      class: "no-underline rounded-full px-4 py-1 text-white bg-red-500 cursor-pointer flex items-center space-x-2" do %>
      <%= render "shared/icons/heart", html_class: "w-5 h-5" %>
      <span><%= t('reward') %></span>
    <% end %>
  </div>
<% end %>
