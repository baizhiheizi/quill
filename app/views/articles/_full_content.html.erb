<% user ||= current_user %>

<div class="mb-12 prose-article">
  <%= article.content_as_html.html_safe %>
</div>

<div class="mb-8">
  <%= render "articles/blockchain_info", article: @article %>
</div>

<% unless article.author == user %>
  <div class="flex justify-center">
    <%= link_to new_pre_order_path(order_type: :reward_article, article_uuid: article.uuid), 
      data: {
        turbo_frame: :modal
      },
      class: "no-underline rounded-full px-6 py-2 text-white bg-[#F3463F] cursor-pointer flex items-center space-x-2" do %>
      <span><%= t('reward') %></span>
    <% end %>
  </div>
<% end %>
