<div data-controller="infinite-scroll">
  <div id="articles_list">
    <% if articles.blank? %>
      <div class="text-center py-2 opacity-50">
        <%= t("no_record") %>
      </div>
    <% else %>
      <%= render partial: "articles/article_card", collection: articles, as: :article %>
    <% end %>
  </div>
  <div data-infinite-scroll-target='scrollArea'></div>

  <%= render partial: "shared/pagination", locals: { pagy: pagy, id: "articles_pagination" } %>
</div>
