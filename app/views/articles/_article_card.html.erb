<div class="bg-white mb-2 p-4 sm:p-6 sm:rounded-lg sm:shadow hover:ring-2">
  <div class="flex justify-between mb-4">
    <div class="relative flex items-center space-x-2">
      <img class="w-10 h-10 rounded-full" src="<%= article.author.avatar  %>" />
      <div>
        <div class="text-base font-bold"><%= article.author.name %></div>
        <div class="text-xs sm:text-sm text-gray-500">
          <% if (Time.current - article.published_at) < 24.hours %>
            <%= time_ago_in_words article.published_at %>
          <% else %>
            <%= article.published_at.strftime("%Y-%m-%d %H:%M") %>
          <% end %>
        </div>
      </div>
      <%= link_to user_path(article.author) do %>
        <span aria-hidden="true" class="absolute inset-0"></span>
      <% end %>
    </div>
    <div class="text-right">
      <div class="flex itemx-center space-x-2">
        <img class="w-6 h-6 rounded-full" src="<%= article.currency.icon_url %>" />
        <span><%= article.price_tag %>
      </div>
      <div class="text-xs sm:text-sm text-gray-500">â‰ˆ$<%= article.price_usd %></div>
    </div>
  </div>
  <%= link_to article_path(article), class: "mb-4 block" do %>
    <div class="font-bold text-xl lg:text-2xl 2xl:text-3xl mb-4">
      <%= article.title %>
    </div>
    <div>
      <%= article.intro %>
    </div>
  <% end %>
  <div class="flex overflow-x-scroll items-center space-x-4 mb-4">
    <% article.tag_names.each do |tag_name| %>
      <%= link_to articles_path(tag: tag_name), class: "px-2 py-1 text-sm bg-gray-200 font-bold" do %>
        <%= tag_name %>
      <% end %>
    <% end %>
  </div>
  <div class="flex items-center space-x-8 text-gray-500">
    <div class="flex items-center space-x-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="lg:text-lg"><%= article.revenue_usd %></span>
    </div>
    <div class="flex items-center space-x-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      <span class="lg:text-lg"><%= article.comments_count %></span>
    </div>
    <% if article.upvote_ratio.present? %>
      <div class="flex items-center space-x-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
        </svg>
        <span class="lg:text-lg"><%= article.upvote_ratio %></span>
      </div>
    <% end %>
    <div>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 lg:h-6 lg:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
      </svg>
    </div>
  </div>
</div>
