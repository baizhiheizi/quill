<%= form_with url: articles_path, 
  method: :get, 
  data: { 
    controller: "search",
    search_target: "form",
    remote: false,
  },
  class: "relative max-w-2xl" do |form| %>
  <div class="absolute inset-y-0 left-0 flex items-center pl-2">
    <%= render "shared/icons/search", html_class: "w-6 h-6 opacity-50" %>
  </div>
  <%= form.text_field :query, 
    placeholder: "Search", 
    data: { 
      search_target: "input",
      action: "input->search#submit",
    },
    class: "w-full px-10 rounded-lg border-zinc-200 dark:bg-zinc-900 dark:border-zinc-800" %>
  <%= form.hidden_field :order_by, value: :lately %> 
  <%= form.submit 'search', class:"hidden" %>
  <div class="absolute inset-y-0 right-0 flex items-center pr-2">
    <button class="hidden cursor-pointer" data-search-target="clearButton" data-action="search#clear">
      <%= render "shared/icons/close", html_class: "w-6 h-6 opacity-50" %>
    </button>
  </div>
  <div id="search_result_list"></div>
<% end %>
