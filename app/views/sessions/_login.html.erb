<div data-controller="login" class="">
  <div data-login-target="eth">
    <div data-controller="metamask" class="flex justify-center mb-2">
      <a data-metamask-target="loginButton" 
        data-action="metamask#login" 
        href="https://metamask.io"
        target="_blank"
        class="relative px-2 py-3 bg-stone-100 hover:bg-stone-200 dark:bg-stone-800 dark:hover:bg-stone-700 rounded-lg flex items-center justify-center text-lg w-96 hover:scale-105">
        <div class="w-8 h-8 flex absolute left-4">
          <%= image_tag 'metamask.svg', class: 'w-full h-auto' %>
        </div>
        <span class="">MetaMask</span>
      </a>
    </div>

    <div data-controller="coinbase" class="flex justify-center mb-2">
      <button data-coinbase-target="loginButton" 
        data-action="coinbase#login" 
        class="relative block px-2 py-3 bg-stone-100 hover:bg-stone-200 dark:bg-stone-800 dark:hover:bg-stone-700 rounded-lg flex items-center justify-center text-lg w-96 hover:scale-105">
        <div class="w-8 h-8 flex absolute left-4">
          <%= image_tag 'coinbase.svg', class: 'w-full h-auto' %>
        </div>
        <span class="">Coinbase</span>
      </button>
    </div>

    <div data-controller="wallet-connect" class="flex justify-center mb-2">
      <a data-metamask-target="loginButton" 
        data-action="wallet-connect#login" 
        href="https://walletconnect.com"
        target="_blank"
        class="relative px-2 py-3 bg-stone-100 hover:bg-stone-200 dark:bg-stone-800 dark:hover:bg-stone-700 rounded-lg flex items-center justify-center text-lg w-96 hover:scale-105">
        <div class="w-8 h-8 flex absolute left-4">
          <%= image_tag 'walletconnect.svg', class: 'w-full h-auto' %>
        </div>
        <span>Wallet Connect</span>
      </a>
    </div>

    <div data-action="click->login#showMixin" class="w-96 mx-auto text-sm text-center py-2 underline cursor-pointer">
      <%= t('using_mixin_wallet') %>
    </div>
  </div>

  <div data-login-target="mixin" class="hidden">
    <div class="flex justify-center mb-2">
      <%= link_to login_path(return_to: params[:return_to] || request.referer), 
        class: "relative px-2 py-3 bg-stone-100 hover:bg-stone-200 dark:bg-stone-800 dark:hover:bg-stone-700 rounded-lg flex items-center justify-center text-lg w-96 hover:scale-105" do %>
        <div class="w-8 h-8 flex absolute left-4">
          <%= image_tag ('mixin-logo.png'), class: 'w-full h-auto' %>
        </div>
        <span>Mixin Messenger</span>
      <% end %>
    </div>

    <div data-controller="fennec" class="flex justify-center mb-2">
      <a data-controller="fennec"
        data-fennec-target="loginButton" 
        data-action="fennec#login" 
        href="https://pando.im/fennec"
        target="_blank"
        class="relative px-2 py-3 bg-stone-100 hover:bg-stone-200 dark:bg-stone-800 dark:hover:bg-stone-700 rounded-lg flex items-center justify-center text-lg w-96 hover:scale-105">
        <div class="w-8 h-8 flex absolute left-4">
          <%= image_tag 'fennec-logo.png', class: 'w-full h-auto' %>
        </div>
        <span>Fennec</span>
      </a>
    </div>

    <div data-action="click->login#showEth" class="w-96 mx-auto text-sm text-center py-2 underline cursor-pointer">
      <%= t('using_eth_wallet') %>
    </div>
  </div>
</div>
