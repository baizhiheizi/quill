<% if current_user.faucet_bonus.present? %>
  <%= turbo_stream.append 'flashes' do %>
    <%= render "flashes/flash", type: :success, message: t('you_have_successfully_claimed_please_check_your_wallet_later') %>
  <% end %>

  <%= turbo_stream.replace 'faucet_claim_button' do %>
    <%= render "mvm/faucets/claim_button" %>
  <% end %>
<% else %>
  <%= turbo_stream.append 'flashes' do %>
    <%= render "flashes/flash", type: :warning, message: t('you_need_to_deposit_first') %>
  <% end %>
<% end %>
