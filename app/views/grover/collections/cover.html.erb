<div class="w-[512px] h-[512px] relative w-full h-full bg-[url('collection-cover-bg.svg')] bg-cover">
  <div class="absolute top-[206px] z-10 w-full">
    <div class="mb-4">
      <%= image_tag @collection.author.avatar, class: "mx-auto border-[3px] border-white w-[100px] y-[100px] rounded-full" %>
    </div>
    <div class="text-center text-xl text-white font-bold font-mono mb-8">
      <%= @collection.author.short_name %>
    </div>
    <div class="text-center text-3xl text-white font-black px-12 line-clamp-2">
      <%= @collection.name %>
    </div>
  </div>

  <div class="absolute bottom-0 w-full h-[256px] bg-white bg-opacity-30 backdrop-blur-md">
  </div>
</div>
