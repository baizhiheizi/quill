#!/usr/bin/env bash

# throw error when failed
set -e

# use main credentials
cp config/credentials/main.yml.enc config/credentials.yml.enc
cp config/settings.main.example.yml config/settings.yml

# compile assets
bundle exec bin/rails assets:precompile
bundle exec bin/rails webpacker:compile

# clean assets
bundle exec bin/rails assets:clean

