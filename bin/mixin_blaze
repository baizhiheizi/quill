#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'
require File.expand_path('../config/environment', __dir__)

EM.run {
  if Settings.blaze_enable
    BatataBot.api.start_blaze_connect do
      def on_open(ws, _event)
        p ['Batata', Time.current, :open]
        ws.send BatataBot.api.list_pending_message
      end

      def on_message(ws, event)
        raw = JSON.parse BatataBot.api.read_ws_message(event.data)
        return if raw&.[]('action') == 'ACKNOWLEDGE_MESSAGE_RECEIPT'

        p ['Batata', Time.current, :message, raw&.[]('action')]
        data = raw['data']
        return if data.blank?

        # process message
        MixinMessage.create_with(raw: raw).find_or_create_by(message_id: data['message_id'])

        # ack
        ws.send BatataBot.api.acknowledge_message_receipt(data['message_id']) if data&.[]('message_id').present?
      end
    end
  end

  Thread.new {
    MixinNetworkSnapshot.poll
  }
}
